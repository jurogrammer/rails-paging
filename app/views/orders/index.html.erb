<div class="search">
  <%= select_tag :condition, options_for_select(
      [
          ["주문번호", "orderNumber"],
          ["배송상태", "status"],

      ], "orderNumber"), class: 'condition' %>
  <%= text_field_tag :q, nil, placeholder: '검색어를 입력해주세요.', class: 'form-control search-box' %>
  <span class="input-group-append">
    <%= button_tag class: 'search-btn' do -%>
      <i class="fa fa-search"></i> 검색
    <% end %>
  </span>
</div>

